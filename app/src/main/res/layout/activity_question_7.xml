<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    android:id="@+id/question7View"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFragSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingTop="30dp"
        android:text="@string/question_seven"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        android:src="@drawable/sealionpic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="6dp"
        android:paddingTop="16dp"
        android:text="@string/q6text"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/q7seaOrSeaLion"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:hint="@string/q7bar"
        android:inputType="textShortMessage"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:theme="@android:style/Theme.Holo.Light"
        android:onClick="sealOrSeaLion"/>

    <Button
        android:id="@+id/submit_answers"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:onClick="submitAnswers"
        android:text="@string/submitAnswers"
        android:textSize="16sp" />


</LinearLayout>

</ScrollView>